@model IEnumerable<ETicaretSitesi.Models.CodeFirstVT.Product>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row mt-4">
        <div class="col-md-12 my-4">
            <h2>Ürünler</h2>

        </div>
    </div>

    <p>
        @Html.ActionLink("Yeni Ürün", "Edit")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Kategorisi")
            </th>
            <th>
                @Html.DisplayName("Fiyatı")
            </th>

            <th>
                @Html.DisplayName("Ürün Adı")
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Adi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UrunAdi)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Fiyat)
                </td>

                <td>
                    <a href="@Url.Action("Edit",new { id = item.Id })" class="btn btn-info btn-xs">Düzenle</a>
                    |

                    <button type="button" onclick="DeleteProduct('@Url.Action("Delete",new { id = item.Id })')" class="btn btn-danger btn-xs">Sil</button>

                </td>
            </tr>
        }

    </table>
</div>
<script>
    function DeleteProduct(url) {
        if (confirm("Silmek istediğine Emin Misin?")) {
            location.href = url;
        }
    }
</script>