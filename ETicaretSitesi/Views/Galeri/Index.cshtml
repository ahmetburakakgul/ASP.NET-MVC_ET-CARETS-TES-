@model IEnumerable<ETicaretSitesi.Models.CodeFirstVT.Galeri>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Galeri</h2>
    <a class="btn btn-success" href="/Galeri/Create">Yeni Ekle</a>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Resim URL</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            <!--modelden gelen bilgilerin döngüsünü sağlar yani kaç kayıt varsa döngü boyunca bize getircek-->
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ResimId</td>
                    <td><img width="100" height="100" src="@Url.Content(String.Format(item.ResimUrl))" /></td>
                    <td>
                        <button type="button" onclick="DeleteProduct('@Url.Action("Delete",new { id = item.ResimId })')" class="btn btn-danger btn-xs">Sil</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        function DeleteProduct(url) {
            if (confirm("Silmek istediğine Emin Misin?")) {
                location.href = url;
            }
        }
    </script>
</div>