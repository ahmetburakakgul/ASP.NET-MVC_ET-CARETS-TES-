@model ETicaretSitesi.Models.Hesap.ProfilModels
@{
    ViewBag.Title = $"{Model.Members.Adı} {Model.Members.Soyadı}";
}
<div class="container">
    <div class="row mt-4">
        <div class="col-md-12 my-4">
            <h2>Profil Düzenleme</h2>
            <h4>@ViewBag.MyError</h4>
            <hr>
        </div>
    </div>
    
    @using (Html.BeginForm("ProfilEdit", "Hesap", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Members.Adı, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Members.Adı, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Members.Adı, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Members.Soyadı, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Members.Soyadı, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Members.Soyadı, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Members.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Label("Email", Model.Members.Email)
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Members.Password, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.Editor("Password", new { htmlAttributes = new { @class = "form-control", type = "password" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Members.Biografi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Members.Biografi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Members.Biografi, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Members.ProfilResmi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="ProfilResmiInput" value="" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12 text-right">
                <input type="submit" value="Kaydet" class="btn btn-warning" />
            </div>
        </div>
        
    </div>
    }

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</div>