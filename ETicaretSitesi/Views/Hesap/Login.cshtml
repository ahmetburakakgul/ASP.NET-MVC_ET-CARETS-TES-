@model ETicaretSitesi.Models.Hesap.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">

    <!-- content begin -->
    <div class="row my-4">
        <div class="col-md-4 offset-md-4 my-4">
            @using (Html.BeginForm())
            {
                <div class="card card-default shadow">
                    <div class="card-header">
                        <div class="row">
                            <div class="col-md-3">
                                <h3>
                                    <span class="fa fa-sign-in fa-2x"></span>
                                </h3>
                            </div>
                            <div class="col-md-9 text-right">
                                <h2>Giriş</h2>
                                <small style="color:red">@TempData["Info"]</small><br />
                                @if (ViewBag.ReError != null && string.IsNullOrEmpty((string)ViewBag.ReError) == false)
                                {
                                    <small style="color:red">@ViewBag.ReError</small>
                                }
                                else
                                {
                                    <small>Lütfen e-posta ve şifrenizi giriniz.</small>
                                }

                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Member.Email, new { @class = "form-control", placeholder = "e-mail address", type = "email" })
                        </div>
                        <div class="form-group">
                            @Html.TextBoxFor(model => model.Member.Password, new { @class = "form-control", placeholder = "password", type = "password" })

                        </div>
                    </div>
                    <div class="card-footer text-muted text-right">
                        <a href="~/Hesap/ForgotPassword" class="btn btn-warning">
                            <span class="fa fa-asterisk mr-2"></span>Şifremi Unuttum!
                        </a>
                        <button class="btn btn-success" type="submit">
                            <span class="fa fa-sign-in mr-2"></span>Giriş
                        </button>
                    </div>
                </div>
            }
            
        </div>
    </div>
    <!-- content end -->

</div>
