@model IEnumerable<ETicaretSitesi.Models.CodeFirstVT.Category>

@{
    ViewBag.Title = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row mt-4">
        <div class="col-md-12 my-4">
            <h2>Kategoriler</h2>

        </div>
    </div>

    <p>
        @Html.ActionLink("Yeni Oluştur", "Edit")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Kategori Adı")
            </th>

            <th>
                @Html.DisplayName("Üst Kategorisi")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Adi)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Categories2.Adi)
                </td>

                <td>
                    <a href="@Url.Action("Edit",new { id = item.Id })" class="btn btn-info btn-xs">Düzenle</a>
                    |

                    <button type="button" onclick="DeleteProduct('@Url.Action("Delete",new { id = item.Id })')" class="btn btn-danger btn-xs">Sil</button>
                </td>
            </tr>
        }

    </table>

    <script>
        function DeleteProduct(url) {
            if (confirm("Silmek istediğine Emin Misin?")) {
                location.href = url;
            }
        }
    </script>
</div>